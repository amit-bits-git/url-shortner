
<%- include('layout', { title: 'Dashboard', user: user }) %>

<h2 class="mb-4">Dashboard</h2>

<form method="POST" action="/shorten" class="mb-4">
  <div class="input-group">
    <input name="longUrl" type="url" class="form-control" placeholder="Paste your long URL here" required>
    <button class="btn btn-success">Shorten</button>
  </div>
</form>

<% if (urls && urls.length > 0) { %>
  <h4>My Shortened URLs</h4>
  <table class="table table-bordered table-hover">
    <thead class="table-light">
      <tr>
        <th scope="col">Short URL</th>
        <th scope="col">Original URL</th>
      </tr>
    </thead>
    <tbody>
      <% urls.forEach(url => { %>
        <tr>
          <td><a href="/<%= url.shortCode %>" target="_blank">/<%= url.shortCode %></a></td>
          <td><a href="<%= url.longUrl %>" target="_blank"><%= url.longUrl %></a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p class="text-muted">You haven't shortened any URLs yet.</p>
<% } %>
